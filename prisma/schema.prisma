generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Match {
  id Int @id @default(autoincrement())

  identifier String   @unique
  opponent   String
  location   String
  league     String
  date       DateTime
  emblem     String

  @@map("match")
}

model Result {
  id Int @id @default(autoincrement())

  identifier    String   @unique
  opponent      String
  location      String
  league        String
  date          DateTime
  emblem        String
  interGoals    Int
  opponentGoals Int

  @@unique([opponent, date])
  @@map("result")
}
